<h3 class="ui header">{{t "forms.i-i-s-rezerv-проект-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.стоимость
      class=(if (v-get validationModel "стоимость" "isInvalid") "error")
      label=(t "forms.i-i-s-rezerv-проект-e.стоимость-caption")
      data-test-i-i-s-rezerv-проект-e-стоимость=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "стоимость" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименование
      class=(if (v-get validationModel "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-rezerv-проект-e.наименование-caption")
      data-test-i-i-s-rezerv-проект-e-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наименование" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.срок
      class=(if (v-get validationModel "срок" "isInvalid") "error")
      label=(t "forms.i-i-s-rezerv-проект-e.срок-caption")
      data-test-i-i-s-rezerv-проект-e-срок=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "срок" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-rezerv-проект-e.участник-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.участник
      displayAttributeName="фИО"
      autocomplete=true
      relationName="участник"
      projection="УчастникL"
      title=(t "forms.i-i-s-rezerv-проект-e.участник-caption")
      readonly=readonly
      componentName="участникLookup"
      class=(if (v-get validationModel "участник" "isInvalid") "error")
      data-test-i-i-s-rezerv-проект-e-участник=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "участник" "message")}}
  </div>
</form>
